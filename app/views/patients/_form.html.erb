<%= form_for([@doctor, @patient]) do |form| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :firstname,class:"col-md-4 control-label" %>
    <%= form.text_field :firstname , required: true %>
  </div>

  <div class="form-group">
    <%= form.label :lastname,class:"col-md-4 control-label" %>
    <%= form.text_field :lastname , required: true%>
  </div>

  <div class="form-group">
    <%= form.label :dob,class:"col-md-4 control-label" %>
    <%= form.date_select :dob, start_year: 1900, end_year: Time.now.year , required: true %>
  </div>

  <div class="form-group">
    <%= form.label :gender,class:"col-md-4 control-label" %>
    <%= form.select:gender, ["Male", "Female","Bisexual"], required: true %>
  </div>


  <div class="form-group">
    <%= form.label :email,class:"col-md-4 control-label" %>
    <%= form.text_field :email, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :phone,class:"col-md-4 control-label" %>
    <%= form.text_field :phone, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :address,class:"col-md-4 control-label" %>
    <%= form.text_area :address, :cols=>23, :rows=>5 , required: true%>
  </div>

    <div class="form-group">
      <%= form.label :condition,class:"col-md-4 control-label" %>
      <%= form.text_area :condition, :cols=>23, :rows=>5 , required: true%>
    </div>

    <div class="form-group">
      <%= form.label :level,class:"col-md-4 control-label" %>
      <%= form.select:level, ["1", "2","3"], required: true %>
    </div>
  <div class="btn btn-default">
    <%= form.submit %>
  </div>
<% end %>
