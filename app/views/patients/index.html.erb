<% if user_signed_in? %>

  <div class="price">
    <div class="row">
      <span class="text-muted">Get a price estimate</span>
    </div>
    <div class="row">
      <%= form_tag "/validateprice" do %>
      <%= text_field_tag :search_string, nil, :placeholder => "Level between 1 - 3" %>
      <%= submit_tag "Check Price" %>
      <% end %>
      </div>
  </div>

  


<p id="notice"><%= notice %></p>
<h1>List of Patients in Dr.<%= @doctor.firstname %> <%=@doctor.lastname%></h1>
<table class="table table-bordered">
  <th><%= link_to 'New Patient', new_doctor_patient_path(@doctor) %> </th>
  <th><%= link_to 'Back to Doctor', @doctor %></th>
</table>
<table  class="table table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Condition</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
          <% for patient in @doctor.patients %>
        <th scope="row"><%= patient.id %> </th>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dob.strftime('%m/%d/%Y')%></td>
        <td><%= patient.gender  %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.address %></td>
        <td><%= patient.condition %></td>
        <td><%= patient.level %></td>
        <td><%= link_to 'Show', doctor_patient_path(@doctor, patient) %></td>
        <td><%= link_to 'Edit', edit_doctor_patient_path(@doctor,patient) %></td>
        <td><%= link_to 'Destroy', doctor_patient_path(@doctor,patient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% end %>
  </tbody>

</table>

<br />
<%= link_to 'New Patient', new_doctor_patient_path(@doctor) %> |
<%= link_to 'Back to Doctor', @doctor %>

<% end %>
