<% if user_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>  Patient Fullname <%= @patient.firstname %> <%= @patient.lastname %></h1>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>Id</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"><%= @patient.id %> </th>
        <td><%= @patient.firstname %></td>
        <td><%= @patient.lastname %></td>
        <td><%= @patient.dob %></td>
        <td><%= @patient.gender %></td>
        <td><%= @patient.email %></td>
        <td><%= @patient.phone %></td>
        <td><%= @patient.address %></td>
        <td><%= @patient.condition %></td>
        <td><%= link_to 'Edit', edit_doctor_patient_path(@doctor,@patient) %></td>
      </tr>
  </tbody>
</table>

<%= link_to 'Back_to_patients', doctor_patients_path(@doctor) %>
<% end %>
