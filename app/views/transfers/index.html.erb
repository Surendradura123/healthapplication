<p id="notice"><%= notice %></p>

<h1>Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.firstname %></td>
        <td><%= transfer.lastname %></td>
        <td><%= transfer.dob %></td>
        <td><%= transfer.email %></td>
        <td><%= transfer.phone %></td>
        <td><%= transfer.address %></td>
        <td><%= transfer.cost %></td>
        <td><%= transfer.date %></td>
        <td><%= transfer.description %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

